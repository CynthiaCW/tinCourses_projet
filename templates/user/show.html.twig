{% block title %}User{% endblock %}

{% block body %}
    <h1>Bonjour, {{ user.email }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th> Votre Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th> Votre Email</th>
                <td>{{ user.email }}</td>
            </tr>
